  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "check": "tsc",
    "prisma:gen": "prisma generate",
    "better-auth:gen": "npx @better-auth/cli generate prisma --yes",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "smoke:signup": "curl -i -c cookie.txt -b cookie.txt -X POST http://localhost:5000/api/auth/sign-up/email -H 'Content-Type: application/json' --data '{\"email\":\"demo@example.com\",\"password\":\"Passw0rd!\"}'",
    "smoke:signin": "curl -i -c cookie.txt -b cookie.txt -X POST http://localhost:5000/api/auth/sign-in/email -H 'Content-Type: application/json' --data '{\"email\":\"demo@example.com\",\"password\":\"Passw0rd!\"}'",
    "smoke:session": "curl -i -c cookie.txt -b cookie.txt http://localhost:5000/api/auth/get-session",
    "smoke:dev:whoami:replit": "curl -i -c cookie.txt -b cookie.txt https://c25f0f2e-887e-4494-845b-803084ff23ee-00-2rxeabtep8sj0.janeway.replit.dev/dev/whoami",
    "smoke:dev:whoami:netlify": "curl -i -c cookie.txt -b cookie.txt https://transity-auth.netlify.app/dev/whoami",
    "smoke:dev:apikey:create:replit": "curl -i -c cookie.txt -b cookie.txt -X POST https://c25f0f2e-887e-4494-845b-803084ff23ee-00-2rxeabtep8sj0.janeway.replit.dev/dev/api-keys -H 'Content-Type: application/json' --data '{\"label\":\"orders-svc\",\"expiresInDays\":90}'",
    "smoke:dev:apikey:create:netlify": "curl -i -c cookie.txt -b cookie.txt -X POST https://transity-auth.netlify.app/dev/api-keys -H 'Content-Type: application/json' --data '{\"label\":\"orders-svc\",\"expiresInDays\":90}'",
    "smoke:dev:jwt:issue:replit": "curl -i -c cookie.txt -b cookie.txt -X POST https://c25f0f2e-887e-4494-845b-803084ff23ee-00-2rxeabtep8sj0.janeway.replit.dev/dev/jwt/issue -H 'Content-Type: application/json' --data '{\"ttlSeconds\":1800,\"audience\":\"orders-api\",\"scopes\":[\"orders:read\"]}'",
    "smoke:dev:jwt:issue:netlify": "curl -i -c cookie.txt -b cookie.txt -X POST https://transity-auth.netlify.app/dev/jwt/issue -H 'Content-Type: application/json' --data '{\"ttlSeconds\":1800,\"audience\":\"orders-api\",\"scopes\":[\"orders:read\"]}'",
    "smoke:dev:org:create:replit": "curl -i -c cookie.txt -b cookie.txt -X POST https://c25f0f2e-887e-4494-845b-803084ff23ee-00-2rxeabtep8sj0.janeway.replit.dev/dev/orgs -H 'Content-Type: application/json' --data '{\"name\":\"Acme Corp\"}'",
    "smoke:dev:org:create:netlify": "curl -i -c cookie.txt -b cookie.txt -X POST https://transity-auth.netlify.app/dev/orgs -H 'Content-Type: application/json' --data '{\"name\":\"Acme Corp\"}'",
    "netlify:dev": "netlify dev",
    "netlify:build": "netlify build",
    "netlify:serve": "netlify serve",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.23",
    "@fastify/cors": "^11.1.0",
    "@neondatabase/serverless": "^0.10.4",
    "@netlify/functions": "^4.2.6",
    "@prisma/client": "^6.16.2",
    "better-auth": "^1.3.22",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "fastify": "^5.6.1",
    "netlify-cli": "^23.8.1",
    "prisma": "^6.16.2",
    "undici": "^7.16.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  }
